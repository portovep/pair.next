<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to Pair.Next</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/foundation.css" />
    <link rel="stylesheet" href="/css/foundation-icons.css" />
    <link rel="stylesheet" href="/css/own.css" />

    <script src="/js/vendor/modernizr.js"></script>

  </head>
  <body>

    <!-- Nav bar -->
    <div class="contain-to-grid">
      <nav class="top-bar" data-topbar>
        <ul class="title-area">
          <li class="name">
            <h1><a href="/hi">Pair.Next</a></h1>
          </li>
          <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
        </ul>

        <section class="top-bar-section">
          <!-- Right Nav Section -->
          <ul class="right">
            <li class ="name"><h1><a href="/user">
            <% if current_user %>
              Welcome <%= current_user.nickname %>
            <% else %>
              Welcome
            <% end %>
            </h1></a></li>
          </ul>

          <!-- Left Nav Section -->
          <ul class="left">
          </ul>
        </section>
      </nav>
    </div>
    

    <% if session[:success_message] %>
      <div data-alert class="alert-box success">
        <%= session.delete(:success_message) %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %> 

    <% if session[:error_message] %>
      <div data-alert class="alert-box warning">
        <%= session.delete(:error_message) %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %> 


  	<%= yield %>
   
    <footer class="row">
      <div class="large-12 columns">
        <hr />
        <div class="row">
          <div class="large-6 columns">
            <p>Brought to you from the beach with love.</p>
          </div>
          <div class="large-6 columns">
            <ul class="inline-list right">
              <li><a href="#">@eu-hack-heroes</a></li>
              <li><a href="#">Link 2</a></li>
              <li><a href="#">Link 3</a></li>
              <li><a href="#">Link 4</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <script src="/js/vendor/jquery.js"></script>
    <script src="/js/foundation.min.js"></script>
    <script>
      $(document).foundation();
    </script>
  </body>
</html>

