<div class="row">
	<div class="large-12 column">
		<h1>Profile - <%= @team.name %> - Shuffle Teams</h1>
	</div>
</div>
<div class="row">
	<div id="old-pairs" class="large-5 column">
		<% if @old_pairs.empty? %>
		<span>No existing pairings</span>
		<% else %>
		<table>
			<tbody>
			<% @old_pairs.each do |pair| %>
				<tr>
					<% pair.each do |user| %>
					<td><%= user.username %></td>
					<% end %>
				</tr>
			<% end %>
			</tbody>
		</table>
		<% end %>
	</div> 
	<div class="column large-1">
		<form method="POST">
			<button type="submit">SHUFFLE</button>
		</form>
	</div>
	<div id="new-pairs" class="column large-5">
		<% if @new_pairs.empty? %>
		<span>Shuffle me</span>
		<% else %>
		<table>
			<tbody>
			<% @new_pairs.each do |pair| %>
				<tr>
					<% pair.each do |user| %>
					<td draggable="true" ondragstart="return dragStart(event)" ondragenter="return dragEnter(event)" ondrop="return dragDrop(event)" ondragover="return dragOver(event)" id="newpair-user-<%= user.id %>"><%= user.username %></td>
					<% end %>
				</tr>
			<% end %>
			</tbody>
		</table>
		<% end %>
	</div> 
</div>
<% if not @new_pairs.empty? %>
	<div class="row">
		<div class="column large-3 large-offset-9">
			<form action="savePairs" method="POST">
				<% pairIndex =0 %>
				<% @new_pairs.each do |pair| %>
						<% i=0 %>
						<% pair.each do |user| %>
							<input type="hidden" name="pair[][<%=pairIndex%>][<%=i%>]" value="<%=user.id%>">
							<% i+=1 %>
						<% end %>
						<% pairIndex+=1 %>
				<% end %>
				<button type="submit">PAIR LIKE THIS</button>
			</form>
		</div>
	</div>
<% end %>

<script src="/js/dragAndDrop.js"></script>
