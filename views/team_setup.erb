<div class="row">
  <div class="large-12 columns">
    <h1>Create a team</h1>
  </div>
</div>

<form action="/team/new" method="post">

  <div class="row">
    <div class="large-4 columns <%= "error" if @team.errors.messages[:name] %>">
      <label>Team name
        <input type="text" name="team_name" placeholder="Type the team name" />
      </label>
      <% if @team.errors.messages[:name] %>
        <small class="error">Name <%= @team.errors.messages[:name].first %></small>
      <% end %> 
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <input type="submit" class="button" value="Create" />
    </div>
  </div>

</form>